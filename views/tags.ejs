<!doctype html>
<html lang="ja">
	<head>
		<%- include('parts/head', {title: '字幕データを検索する'}) %>
	</head>
	<body>
		<div class="container p-2">
			<%- include('parts/nav') %>
		</div>

		<div class="container p-5">

			<h1>タグ一覧</h1>

			<% if (userProfile.role == 2) { %>
				<div class="row mb-3">
					<div class="col col-auto">
						<button type="button" class="btn btn-primary" onclick="location.href='/admin/tags/edit';">タグを追加</button>					
					</div>
				</div>
			<% } %>
			<% for (let key in tags) { %>
				<div class="card my-3">
					<div class="card-body">
						<div class="row">
							<div class="col">
								<div class="row">
									<div class="col-sm">
										<a href="/admin/tags/edit?tagId=<%= tags[key].tagId %>"><%= tags[key].displayName %></a>
									</div>
								</div>
								<div class="row">
									<div class="col-sm">
										<%= tags[key].name %>
									</div>
								</div>
								<div class="row">
									<div class="col-sm">
										<%= tags[key].description %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			<% } %>
		</div>
	</body>
</html>